<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaAlimentosBackEnd">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/texto_macarraocarbonara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_macarraocarbonara" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@tools:sample/avatars"
                android:contentDescription="@string/texto_macarraocarbonara"
                tools:srcCompat="@drawable/carbonara" />

            <TextView
                android:id="@+id/texto_risoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_risotto" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@tools:sample/avatars"
                android:contentDescription="@string/texto_risotto"
                tools:srcCompat="@drawable/risoto" />

            <TextView
                android:id="@+id/texto_rondelli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_rondelli" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@tools:sample/avatars"
                android:contentDescription="@string/texto_rondelli"
                tools:srcCompat="@drawable/rondelli" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>